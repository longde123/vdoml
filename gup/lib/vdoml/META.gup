#!bash -euo pipefail
gup -u ../../VERSION
VERSION="$(cat ../../VERSION)"
[ -n "$VERSION" ]
gup -u ../../nix/opam-dep-names
REQUIRES="$(cat ../../nix/opam-dep-names)"

cat <<EOF >"$1"
version = "$VERSION"
description = "Virtual DOM"
requires = "$REQUIRES"
archive(byte) = "vdoml.cma"
archive(native) = "vdoml.cmxa"
archive(native, plugin) = "vdoml.cmxs"
exists_if = "vdoml.cma"
EOF
